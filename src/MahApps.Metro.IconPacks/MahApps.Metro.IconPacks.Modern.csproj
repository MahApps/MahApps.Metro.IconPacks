<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="MSBuild.Sdk.Extras">
    <!-- Project properties -->
    <PropertyGroup>
        <DefineConstants>MODERN</DefineConstants>
        <TargetFrameworks>uap10.0;net47;net46;net45;net40</TargetFrameworks>
        <!--<TargetFrameworks>uap10.0</TargetFrameworks>-->
        <DefaultWpfPageExcludes>$(DefaultWpfPageExcludes);$(MSBuildProjectDirectory)\Themes\**\*.*;$(MSBuildProjectDirectory)\Converter\*.xaml</DefaultWpfPageExcludes>
        <AssemblyName>MahApps.Metro.IconPacks.Modern</AssemblyName>
        <RootNamespace>MahApps.Metro.IconPacks</RootNamespace>
        <GenerateDocumentationFile>true</GenerateDocumentationFile>
    </PropertyGroup>
    <!-- Items include -->
    <ItemGroup Condition="'$(_SdkShortFrameworkIdentifier)' != 'uap'">
        <Compile Remove="*.cs"/>
        <Compile Remove="Attributes\DescriptionAttribute.cs"/>
        <Compile Include="PackIconControl.cs;PackIconExtension.cs"/>

        <Compile Include="*Modern*.cs"/>
        <Page Include="Themes\WPF\Modern\*.xaml" Link="Themes\%(RecursiveDir)%(Filename)%(Extension)" SubType="Designer" Generator="MSBuild:Compile"/>
        <Page Include="Themes\WPF\PackIconModern.xaml" Link="Themes\%(RecursiveDir)%(Filename)%(Extension)" SubType="Designer" Generator="MSBuild:Compile"/>
    </ItemGroup>
    <ItemGroup Condition="'$(_SdkShortFrameworkIdentifier)' == 'uap'">
        <Compile Remove="*.cs"/>
        <Compile Remove="Themes\UAP\**\*.*;Themes\WPF\**\*.*"/>
        <Compile Remove="Converter\MarkupConverter.cs;*Extension*.cs"/>
        <Compile Include="PackIconControl.cs"/>
        <Compile Include="..\paket-files\uwp\ControlzEx\ControlzEx\src\ControlzEx\PackIconBase.cs">
            <Link>ControlzEx\PackIconBase.cs</Link>
        </Compile>
        <Page Include="Converter\*.xaml" SubType="Designer" Generator="MSBuild:Compile"/>

        <Compile Include="*Modern*.cs" Exclude="Converter\MarkupConverter.cs;*Extension*.cs"/>
        <Page Include="Themes\UAP\Modern\*.xaml" Link="Themes\%(RecursiveDir)%(Filename)%(Extension)" SubType="Designer" Generator="MSBuild:Compile"/>
        <Page Include="Themes\UAP\PackIconModern.xaml" Link="Themes\%(RecursiveDir)%(Filename)%(Extension)" SubType="Designer" Generator="MSBuild:Compile"/>
    </ItemGroup>
    <ItemGroup>
        <Compile Include="..\GlobalAssemblyInfo.cs">
            <Link>Properties\GlobalAssemblyInfo.cs</Link>
        </Compile>
        <None Include="paket.references"/>
    </ItemGroup>
    <ItemGroup>
        <Compile DependentUpon="%(Filename)" SubType="Code" Update="$(MSBuildProjectDirectory)\obj\**\*.g$(_SdkLanguageExtension)"/>
    </ItemGroup>
    <Import Project="..\.paket\Paket.Restore.targets"/>
</Project>